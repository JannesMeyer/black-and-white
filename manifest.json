{
	"manifest_version": 2,
	"name": "Black and White",
	"version": "1.0",
	"description": "Turns black and white vision on.",

	"icons": {
		"128": "icon-bw-128.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "icon-bw-19.png",
			"38": "icon-bw-38.png"
		},
		"default_title": "Turn black and white mode on"
	},
	"background": {
		"scripts": ["event-page.js"],
		"persistent": false
	},
	"permissions": [ "tabs", "activeTab" ]
}